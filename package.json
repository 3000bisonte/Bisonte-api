{
  "name": "bisonte-api-server",
  "version": "2.0.0",
  "description": "Servidor API SIMPLIFICADO para Bisonte LogÃ­stica",
  "main": "server-simple.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server-simple.js",
    "dev": "next dev -p 3001",
    "dev:3002": "next dev -p 3002",
    "build": "next build",
    "probe:api": "node scripts/probe-api.js",
    "build:capacitor": "npm run build && node fix-static-paths.js && node fix-capacitor-styles.js && npx cap sync",
    "build:production": "npm run build && node fix-static-paths.js && node fix-capacitor-styles.js && npx cap sync",
    "capacitor:sync": "npx cap sync",
    "capacitor:build": "npm run build:capacitor",
    "capacitor:android": "npx cap open android",
    "capacitor:run:android": "npx cap run android",
    "capacitor:build:android": "npm run build:capacitor && npx cap build android",
    "dev:mobile": "next dev -H 0.0.0.0 -p 3000",
    "mobile:complete": "npm run build:capacitor && npm run capacitor:android",
    "vercel:deploy": "vercel --prod",
    "test:apis": "node scripts/test-apis.js",
    "test:api:full": "node test-full-api.js",
    "test:api:roles": "node test-roles.js",
    "test:api:comprehensive": "node test-comprehensive.js",
    "test:api:advanced": "node test-advanced-features.js",
    "test:api:admin": "node test-admin-endpoints.js",
    "test:config:admob": "node test-config-admob.js",
    "test:system": "npm run test:api:full && npm run test:api:admin && npm run test:api:advanced && npm run test:config:admob",
    "test:api:quick": "node -e \"const f=(...a)=>import('node-fetch').then(({default:f})=>f(...a));(async()=>{const r=await f('https://bisonte-api.vercel.app/api/health');const d=await r.json();console.log('API Status:',r.status,d.status);})();\"",
    "build:mobile": "next build",
    "pre:apk": "node scripts/pre-apk-check.js",
    "api:status": "git -C backend-api status -s",
    "api:commit": "git -C backend-api add -A && git -C backend-api commit -m \"chore(api): sync from app repo\"",
    "api:push": "git -C backend-api push",
    "api:sync": "npm run api:commit || echo no-commit && npm run api:push",
    "api:sync:auto": "node scripts/sync-backend.js",
    "apisrv:status": "git -C api-server status -s",
    "apisrv:commit": "git -C api-server add -A && git -C api-server commit -m \"chore(api-server): sync from app repo\"",
    "apisrv:push": "git -C api-server push",
    "apisrv:sync": "npm run apisrv:commit || echo no-commit && npm run apisrv:push",
    "apisrv:sync:auto": "node scripts/sync-api-server.js"
  },
  "dependencies": {
    "@capacitor-community/admob": "^7.0.3",
    "@capacitor/app": "^7.0.2",
    "@capacitor/browser": "^7.0.2",
    "@mercadopago/sdk-react": "^1.0.3",
    "@prisma/client": "^6.13.0",
    "@react-email/render": "^1.2.0",
    "autoprefixer": "^10.4.19",
    "bcryptjs": "^2.4.3",
    "classnames": "^2.5.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "glob": "^11.0.3",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.8.0",
    "next": "^14.2.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.4",
    "pg": "^8.16.3",
    "prisma": "^6.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^5.0.0",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "cross-env": "^10.0.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.9.2"
  }
}
